<?xml version="1.0" encoding="UTF-8"?>
<project name="ProyectoPrestamos" default="jar" basedir=".">
    
    <!-- Directorios -->
    <property name="src.dir" value="src"/>
    <property name="build.dir" value="build"/>
    <property name="dist.dir" value="dist"/>
    
    <!-- Librerías externas -->
    <path id="project.classpath">
        <fileset dir="lib" includes="*.jar"/>
    </path>

    <!-- Limpieza -->
    <target name="clean">
        <delete dir="${build.dir}"/>
        <delete dir="${dist.dir}"/>
    </target>

    <!-- Compilación -->
    <target name="compile">
        <mkdir dir="${build.dir}"/>
        <javac srcdir="${src.dir}" destdir="${build.dir}" includeantruntime="false" classpathref="project.classpath"/>
    </target>

    <!-- Crear JAR -->
    <target name="jar" depends="compile">
        <mkdir dir="${dist.dir}"/>
        <jar destfile="${dist.dir}/ProyectoPrestamos.jar" basedir="${build.dir}">
            <manifest>
                <attribute name="Main-Class" value="tu.paquete.MainClass"/>
            </manifest>
        </jar>
    </target>

</project>
